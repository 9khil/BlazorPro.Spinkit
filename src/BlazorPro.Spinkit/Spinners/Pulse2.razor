@using BlazorStyled

<Styled @bind-Classname="@example">
        width: @Size;
        height: @Size;
        background-color: @Color;
        border-radius: 100%;
        animation: @pulse 1.2s infinite cubic-bezier(0.455,0.03,0.515,0.955);
</Styled>

<Styled @bind-Classname="pulse" IsKeyframes="true">
    0% {
        transform: scale(0);
    }

    100% {
        transform: scale(1);
        opacity: 0;
    }   
</Styled>

<div class="@example"></div>

@code {
    [Parameter] public string Color { get; set; } = "#000";
    [Parameter] public string Size { get; set; } = "40px";
    string pulse, example;
}