@switch (DefaultSpinner)
{
    case SpinnerType.Chase:
        <Chase @attributes="AdditionalAttributes" />
        break;
    case SpinnerType.Circle:
        <Circle @attributes="AdditionalAttributes" />
        break;
    case SpinnerType.CircleFade:
        <CircleFade @attributes="AdditionalAttributes" />
        break;
    case SpinnerType.Flow:
        <Flow @attributes="AdditionalAttributes" />
        break;
    case SpinnerType.Grid:
        <Grid @attributes="AdditionalAttributes" />
        break;
    case SpinnerType.Plane:
        <Plane @attributes="AdditionalAttributes" />
        break;
    case SpinnerType.Pulse:
        <Pulse @attributes="AdditionalAttributes" />
        break;
    case SpinnerType.Swing:
        <Swing @attributes="AdditionalAttributes" />
        break;
    case SpinnerType.Wander:
        <Wander @attributes="AdditionalAttributes" />
        break;
    case SpinnerType.Wave:
        <Wave @attributes="AdditionalAttributes" />
        break;
    case SpinnerType.Bounce:
    default:
        <Bounce @attributes="AdditionalAttributes" />
        break;
}

@code {

    [Parameter(CaptureUnmatchedValues = true)]
    public IReadOnlyDictionary<string, object> AdditionalAttributes { get; set; }

    [Parameter] public SpinnerType DefaultSpinner { get; set; }
}